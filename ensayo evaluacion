informacion_compradores = {
    "nombres": [],
    "entradas": [],
    "codigo": []
}

def validar_codigo(codigo):
    return (
        len(codigo) >= 6 and
        any(char.isdigit() for char in codigo) and
        any(char.isupper() for char in codigo) and
        " " not in codigo
    )

def obtener_datos_comprador():
    while True:
        nombre = input("Ingrese su nombre: ")
        if nombre in informacion_compradores["nombres"]:
            print("Este nombre ya está registrado, intente de nuevo.")
            continue
        break

    while True:
        tipo = input("Ingrese tipo de entrada (G/V): ").upper()
        if tipo in ["G", "V"]:
            break
        else:
            print("Tipo de entrada inválido. Solo se acepta 'G' o 'V'.")

    while True:
        codigo = input("Ingrese código de confirmación: ")
        if validar_codigo(codigo):
            break
        else:
            print("El código debe tener al menos 6 caracteres, una mayúscula, un número y sin espacios.")

    return nombre, tipo, codigo

def comprar_entrada():
    try:
        nombre, tipo, codigo = obtener_datos_comprador()
        informacion_compradores["nombres"].append(nombre)
        informacion_compradores["entradas"].append(tipo)
        informacion_compradores["codigo"].append(codigo)
        print("✅ Entrada registrada exitosamente.")
    except Exception as e:
        print(f"Ocurrió un error: {e}")


